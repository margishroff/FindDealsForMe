<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myshroff.finddealsforme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-sdk android:minSdkVersion="9" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.myshroff.finddealsforme.View.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.myshroff.finddealsforme.View.ViewFilterActivity"
            android:label="@string/filter_by_category" >
        </activity>
        <activity
            android:name="com.myshroff.finddealsforme.ViewDealDetailsActivity"
            android:text="@string/deal_info" >
        </activity>
        <activity
            android:name="com.myshroff.finddealsforme.View.WebViewBrowser"
            android:text="@string/deal_info" >
        </activity>
        <activity
            android:name="com.myshroff.finddealsforme.View.ViewMapActivity"
            android:label="@string/app_name" >
        </activity>

          <uses-library android:name="com.google.android.maps" />
    </application>

</manifest>